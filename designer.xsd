<?xml version="1.0" encoding="UTF-8"?>

<xsd:schema 
    xmlns="https://raw.github.com/nicodmf"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    targetNamespace="https://raw.github.com/nicodmf"
    elementFormDefault="qualified">
     
    <xsd:element name="designer" type="container">
    </xsd:element>
  
    <xsd:complexType name="designer">
        <xsd:annotation>
            <xsd:documentation><![CDATA[
        The root element of a designer file.
      ]]></xsd:documentation>
        </xsd:annotation>
        <xsd:sequence>
            <xsd:element name="informations"/>
            <xsd:element minOccurs="0" maxOccurs="unbounded" name="parts"/>
            <xsd:element minOccurs="0" maxOccurs="unbounded" name="groups"/>
        </xsd:sequence>
    </xsd:complexType>
  
  
    <xsd:element name="informations">
        <xsd:complexType>
            <xsd:attribute name="version" use="required"/>
            <xsd:attribute name="author" use="required"/>
            <xsd:attribute name="date" use="required"/>
        </xsd:complexType>
    </xsd:element>
    
    <xsd:element name="parts">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element minOccurs="0" maxOccurs="unbounded" name="part"/>
            </xsd:sequence>
            <xsd:attribute name="name" use="required"/>
        </xsd:complexType>
    </xsd:element>
    
    <xsd:element name="part">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element minOccurs="0" maxOccurs="unbounded" name="parameter"/>
            </xsd:sequence>
            <xsd:attribute name="name" use="required"/>
        </xsd:complexType>
    </xsd:element>
  
    <xsd:element name="parameter">
        <xsd:complexType mixed="true">
            <xsd:attribute name="name" use="required"/>
            <xsd:attribute name="type" use="required">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:token">
                        <xsd:enumeration value="color"/>
                        <xsd:enumeration value="width"/>
                        <xsd:enumeration value="font"/>
                        <xsd:enumeration value="text"/>
                        <xsd:enumeration value="group"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:attribute>
            <xsd:attribute name="alternative" use="required">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:token">
                        <xsd:enumeration value="simple"/>
                        <xsd:enumeration value="hover"/>
                        <xsd:enumeration value="active"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:attribute>
        </xsd:complexType>
    </xsd:element>
    
    <xsd:element name="groups">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element minOccurs="0" maxOccurs="unbounded" name="group"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    
    <xsd:element name="group">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element minOccurs="0" maxOccurs="unbounded" name="parameter"/>
            </xsd:sequence>
            <xsd:attribute name="name" use="required"/>
        </xsd:complexType>
    </xsd:element>
    
</xsd:schema>
